<% provide(:title, 'Sign up') %> 
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
  <div class="form-group">
    <%= form_tag('/signup') do %> 
    <%= label_tag :name %>
	<%= text_field_tag :name %>
  </div>
	<br>
	  <div class="form-group">
	<%= label_tag :email %>
	<%= text_field_tag :email %> 
	</div>
	<%= submit_tag "Submit", class: "btn btn-large btn-primary" %> <% end %>
	<p class='back'><%= link_to "Back", root_path %></p>
  </div>
</div>